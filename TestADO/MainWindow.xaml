<Window x:Class="TestADO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestADO"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        Background="Beige">
    <Grid>
        <TextBox Width="100" Height="30" Name="loginBox"  />
        <Label Width="50" Height="30" Content="Login" Margin="-150,0,0,0"/>
        <TextBox Width="100" Height="30" Margin="0,90,0,0" Name="passwordBox"/>
        <Label Width="70" Height="30" Content="Password" Margin="-150,90,0,0"/>
        <Button Width="50" Height="20" Content="Sign In" Margin="70 180 0 0" Click="SignIn" />
        <Button Width="50" Height="20" Content="Register" Margin="-70 180 0 0" Click="Registration" />
    </Grid>
</Window>
